﻿@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Expense_Management_Software.Areas.ADMN_PaymentMode.Models.Admin_MST_PaymentModeModel
<div class="d-flex flex-column">
    <div class="d-flex justify-content-center">
        @*<span class="col-3"></span>*@
        <div class="card">
            <div class="card-header">
                <h5 class="card-tile mb-0">Payment Mode Information</h5>
            </div>
            <form enctype="multipart/form-data" method="post">
                @Html.HiddenFor(x=>x.PaymentModeID)
                @{
                    Console.WriteLine(Model.PaymentModeID);
                }
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="card-body">
                    <div class="form-floating form-floating-outline mb-4">
                        <input type="text" class="form-control" id="ecommerce-product-name" placeholder="Payment Mode" asp-for="PaymentModeType" aria-label="Payment Mode" required>
                        <label for="ecommerce-product-name">Payment Mode Type</label>
                    </div>
                    <div class="row mb-3 align-content-center justify-content-center">
                        <button class="btn btn-success align-content-center justify-content-center" style="width:40%" type="submit" asp-area="ADMN_PaymentMode" asp-controller="Admin_MST_PaymentMode" asp-action="Admin_MST_PaymentModeSave">Add</button>
                    </div>
                </div>
            </form>
        </div>
        @*<span class="col-3"></span>*@
    </div>
</div>

